pipeline {
    agent any 

    environment {
        DOCKERHUB_USER = "mayurpandit25"
        IMAGE_NAME     = "expensesapp"
        DOCKER_PAT_ID  = "dockerhub-credentials-id"
        KUBECONFIG_ID  = "kubeconfig"
    }

    stages {
        
        stage('clone repository') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/mayurpandit25/Expenses-Tracker-WebApp.git'
            }
        }

        stage('build and test with docker compose') {
            steps {
                sh '''
                docker compose up -d --build
                docker compose down
                '''
            }
        }

        stage('docker login and push image') {
            steps {
                withCredentials([string(
                    credentialsId: "${DOCKER_PAT_ID}",
                    variable: "DOCKER_PAT"
                )]) {
                    sh '''
                    echo "$DOCKER_PAT" | docker login -u "$DOCKERHUB_USER" --password-stdin
                    docker tag expenses-tracker-webapp-java_app:latest $DOCKERHUB_USER/$IMAGE_NAME:latest
                    docker push $DOCKERHUB_USER/$IMAGE_NAME:latest
                    '''
                }
            }
        }

        stage('Deploy to kubernetes') {
            steps {
                withCredentials([file(
                    credentialsId: "${KUBECONFIG_ID}",
                    variable: "KUBECONFIG"
                )]) {
                    sh '''
                    export KUBECONFIG=$KUBECONFIG
                    kubectl apply -f k8s/.
                    '''
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
